<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	    <http auto-config="true">
    	<intercept-url pattern="/security/**" access="isAnonymous()"/>
    	<intercept-url pattern="/abankus/**" access="isFullyAuthenticated()"/>
    	<form-login login-page='/security/login' default-target-url='/platform/dashboard'
            always-use-default-target='true' />
        <logout invalidate-session="true" delete-cookies="JSESSIONID" logout-url="/platform/logout"  logout-success-url="/login?logout_successful=18"/>

        <session-management>
       	 <concurrency-control max-sessions="1" expired-url="/security/login?max-time=2"/>
        </session-management>
			<headers>
				<xss-protection/>
				<cache-control/>
			</headers>
    </http>

	<!-- Security Beans -->

	
	<beans:bean id="securityEmployeeUtils" class="com.boateng.abankus.security.utils.SecurityEmployeeUtils"/>
	<!-- End Security Beans -->
	
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/platformDB"/>
    <authentication-manager>
		<authentication-provider>
					<jdbc-user-service data-source-ref="dataSource"
		  users-by-username-query=
		    "select username,password, enabled,emailAddress,employeeId from usrtbl where username=?"
		  authorities-by-username-query=
		    "select username, role from userroletbl where username =?  " />
		    <password-encoder ref="encoder"/>
		</authentication-provider>
	</authentication-manager>
  <beans:bean id="encoder" 
	class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
	<beans:constructor-arg name="strength" value="11" />
  </beans:bean>

      <global-method-security secured-annotations="enabled" />
          
</beans:beans>